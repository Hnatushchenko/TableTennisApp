@model IEnumerable<Player>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Черга на теніс</title>
    <style>
        body {
            margin-right: 50px;
            margin-left: 20px;
        }
        .players-in-queue {
            margin-bottom: 10px;
        }
        .player-box {
            right: 0;
            left: 0;
            margin-right: auto;
            margin-left: auto;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 86%;
            border: solid;
            border-width: 1px;
            padding-top: 10px;
            padding-bottom: 10px;
            margin-bottom: 10px;
            border-radius: 3px;
        }
        .buttons-box {
            right: 0;
            left: 0;
            margin-right: auto;
            margin-left: auto;
            width: 86%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .buttons-box button {
            border-style: solid;
            border-radius: 3px;
            border-color: #C9C9C9;
            border-width: 1px;
            width: 50%;
            height: 30px;
            max-width: 200px;
        }
        h5 {
            right: 0;
            left: 0;
            margin-right: auto;
            margin-left: auto;
            width: 86%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #leave {
            margin-left: 10px
        }
    </style>
    <script>
        function leaveQueue() {
            location.href = window.location.origin + "/Queue/Leave";
        }
        function enterQueue() {
            location.href = window.location.origin + "/Queue/Enter";
        }
        
    </script>
</head>
<body>
    <div class="players-in-queue">
        @if (@Model.Count() == 0) {
            <h5>Черга порожня.</h5>
        }
        @foreach (Player player in @Model)
        {
            <div class="player-box">
                <div class="player-name">
                    @player.Name
                </div>
            </div>
        }
    </div>
    <div class="buttons-box">
        <button id="sign-in" onclick="enterQueue()">Записатися</button>
        <button id="leave" onclick="leaveQueue()">Покинути чергу</button>
    </div>
</body>
</html>