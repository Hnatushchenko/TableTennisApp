@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Черга";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin-right: 20px;
            margin-left: 20px;
        }
        .players-in-queue {
            margin-bottom: 10px;
        }
        .player-box {
            right: 0;
            left: 0;
            margin-right: auto;
            margin-left: auto;
            display: flex;
            align-items: center;
            justify-content: center;
   
            border: solid;
            border-width: 1px;
            padding-top: 10px;
            padding-bottom: 10px;
            margin-bottom: 10px;
            border-radius: 3px;
        }
        .buttons-box {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .buttons-box button {
            border-style: solid;
            border-radius: 3px;
            border-color: #C9C9C9;
            border-width: 1px;
            
            height: 30px;
        }
        h5 {
            right: 0;
            left: 0;
            margin-right: auto;
            margin-left: auto;
            width: 86%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        #leave {
            margin-left: 10px
        }
    </style>
</head>
<body>
    <div class="players-in-queue">
        @if (@Model.Count() == 0) {
            <h5>Черга порожня.</h5>
        }
        @foreach (ApplicationUser player in @Model)
        {
            <div class="player-box">
                <div class="player-name">
                    @player.UserName
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-sm-11">
            <div class="buttons-box row px-4 px-sm-0 row-cols-1 row-cols-sm-3 d-block d-sm-flex justify-content-sm-between">
                <a class="btn btn-primary mb-2 mb-sm-0 float-sm-start offset-sm-1 col-sm-4" asp-action="Enter" id="sign-in">Записатися</a>
                <a class="btn btn-danger float-sm-end col-sm-4" asp-action="Leave">Покинути чергу</a>
            </div>
        </div>
    </div>
</body>
</html>