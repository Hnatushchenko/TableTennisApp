@model IEnumerable<UsersVM>

@{
    ViewData["Title"] = "Користувачі";
}

<div class="row text-center">
    <h3>
        Управління користувачами
    </h3>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-light">
        <tr>
            <th>Ім'я та прізвище</th>
            <th>Ел. адреса</th>
            <th>Ролі</th>
            <th>Рейтинг</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model)
        {
            <tr id="@user.Id">
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", @user.Roles)</td>
                <td>@user.Rating</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@user.Id">Деталі</a>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.Id">Редагувати</a>
                    <button class="btn btn-danger" onclick="deleteUser('@user.Id')">Видалити</button>
                </td>
            </tr> 
        }
    </tbody>
</table>


@section Scripts {
    <script>
        async function deleteUser(id) {
            let responce = await fetch(`/Users/Delete/${id}`, {
                method: 'DELETE'
            });
            if (responce.ok) {
                const row = document.getElementById(id);
                const tableBody = row.parentNode;                
                tableBody.removeChild(row);
            }
        }
    </script>
}
